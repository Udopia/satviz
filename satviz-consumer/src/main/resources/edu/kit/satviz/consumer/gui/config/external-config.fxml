<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="external" prefHeight="200.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.kit.satviz.consumer.gui.config.ExternalConfigController">
    <children>
        <Label text="Connect to external clause producer">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                      <Label text="Listen on port " />
                      <Spinner editable="true" fx:id="portSpinner"/>
               </children>
            </HBox>
         </children>
      </VBox>
    </children>
</VBox>
